# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/nextrade

# ============================================================================
# JWT
# ============================================================================
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# ============================================================================
# OAUTH (Optional - leave empty to disable social login)
# ============================================================================
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Get credentials from: https://developers.facebook.com/
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# ============================================================================
# MATRIX / SYNAPSE (Optional - leave empty to skip real-time chat)
# ============================================================================
# Matrix homeserver host (e.g., matrix.example.com)
MATRIX_HOST=

# Admin user credentials for creating Matrix users
MATRIX_USER=@admin:matrix.example.com
MATRIX_PASSWORD=

# ============================================================================
# AWS S3 (Optional - leave empty to skip image uploads)
# ============================================================================
# S3 Storage Configuration
# For AWS S3, use AWS_S3_BUCKET and leave S3_ENDPOINT empty
# For custom S3-compatible storage (like MinIO, Scaleway, etc.), set S3_ENDPOINT and S3_BUCKET
S3_ENDPOINT=
S3_BUCKET=
S3_BASE_URL=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=nextrade-uploads

# ============================================================================
# APP
# ============================================================================
API_PORT=3001
BACKEND_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
NODE_ENV=development

# ============================================================================
# FRONTEND
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3001/graphql
NEXT_PUBLIC_MATRIX_HOST=

# ============================================================================
# EMAIL (SMTP) - Optional for password reset emails
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
